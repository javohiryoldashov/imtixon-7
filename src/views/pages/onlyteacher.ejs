<!DOCTYPE html>
<html lang="en">
<%- include('../includes/head') %> 
<link rel="stylesheet" href="./css/home.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<body>
    <div class="container1 body">
        <%- include('../includes/aloneHeader') %>
         <main class="">
             <!-- NAME -->
             <div class="Name onlyTeacherBtn">
                 <h1>Teachers</h1>
                 <div class="d-flex align-items-center">
                     <h1 id="titleOfWork">Home work</h1>
                     <p id="detaOfWork">deta</p>
                 </div>
                 <button type="button" class="btn btn-info btn-lg" id="myBtn">Home Work</button>
             </div>

             <!-- Modal -->
             <div class="modal fade" id="myModal" role="dialog">
               <div class="modal-dialog">
               
                 <!-- Modal content-->
                 <div class="modal-content">
                   <div class="modal-header">
                        <h4 class="modal-title">Home Work</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                   </div>
                   <form  id="formOfWork" class="modal-body">
                     <input id="homeWork" name="homeWork" type="text" class="form-control" placeholder="title of work">
                     <!-- <div class="size form-group mx-2"> -->
                        <label for="workDeta">Tugatilish mudatini kiriting</label>
                        <input  name="workDeta" type="date" class="form-control" id="workDeta">
                    <!-- </div> -->
                    <button type="submit" class="from_btn mx-3 w-25  btn btn-primary">Jonatish</button>
                   </form>
                   <div class="modal-footer">
                     <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                   </div>
                 </div>
                 
               </div>
             </div>
             
             
             <!-- ALL STUDENTS -->
             <div class="padding_cont mt-4 birnima">
                 <table class="table">
                     <thead class="thead_dark">
                       <tr>
                         <th scope="col">N‚Å∞</th>
                         <th scope="col">Ism</th>
                         <th scope="col">Tel Raqami</th>
                         <th scope="col" colspan="2">Kursi turi</th>
                       </tr>
                     </thead>
                     <tbody class="tbody">
                         <% findStudents.map((e,i)=>{ %> 
                            <tr>
                                <th scope="row"><%= i+1 %> </th>
                                <td><%= e.name %>   </td>
                                <td><%= e.phoneNumber %></td>
                                <td><%= e.deta %> </td>
                               
                            </tr>
                            <% }) %> 
                     </tbody>
                   </table>
             </div>
         </main>
     </div>
</body>
<script src="./js/onlyteacher.js"></script>
<script>
    $(document).ready(function(){
      $("#myBtn").click(function(){
        $("#myModal").modal();
      });
    });
    </script>
    
</html>